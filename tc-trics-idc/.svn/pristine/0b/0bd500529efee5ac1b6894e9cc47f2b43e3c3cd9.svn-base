<script>


    function status(list) {
        var wxStatus = echarts.init(document.getElementById('status'));

        var names = []; //类别数组（用于存放饼图的类别）
        var brower = [];

        var arrNum = []
        $.each(list, function(index, item) {


            if(item.name != '设备数量'){
                arrNum = item.data
                console.log(item.name)
                var nums = 0;
                $.each(arrNum,function (ind,item) {
                    nums += parseInt(item)
                })
                names.push(item.name); //挨个取出类别并填入类别数组
                brower.push({
                    name: item.name,
                    value: nums,
                });
            }
            // console.log(nums)


        });
        var bing_colorList_start = ['#00ff00','#FE190E','#005eff','#AD52E9','#ff9c00'];
        var bing_colorList_end = ['#02FBF3','#FE9101','#53EEE0','#F87194','#FED13E'];
        var option = {
            title : {
                text: '设备状态',
                x:'left',
                y: 'top',
                padding: [10, 15],
                textStyle: {
                    color:"#fff"
                }
            },
            tooltip: {
                trigger: 'item',
                formatter: "{b} : {c} ({d}%)"
            },
            grid: {
                right: '2%',
                bottom: '5%',
                top: '5%',
                containLabel: true
            },
            legend:{

                icon: "circle",   //  这个字段控制形状  类型包括 circle，rect ，roundRect，triangle，diamond，pin，arrow，none
                itemWidth: 10,  // 设置宽度
                itemHeight: 10, // 设置高度
                orient: 'horizontal',
                x: 'left',
                bottom:'20',
                left: 'center',
                data:brower,
                itemGap:35,
                textStyle:{
                    color:"#fff"
                }
            },
            series: [
                {
                    name: '半径模式',
                    type: 'pie',
                    radius: ['10%', '60%'],
                    center:['50%','50%'],
                    roseType: 'radius',
                    clockWise: false,
                    itemStyle : {
                        normal : {
                            color:function (params){
                                var index=params.dataIndex;
                                if(params.dataIndex >= bing_colorList_start.length){
                                    index=params.dataIndex-bing_colorList_start.length;
                                }
                                return new echarts.graphic.LinearGradient(
                                    0, 0, 0, 1,[{offset: 0, color: bing_colorList_start[index]},{offset: 1, color: bing_colorList_end[index]}]);
                            },
                            label : {
                                show : false   //隐藏标示文字
                            },
                            labelLine : {
                                show : false   //隐藏标示线
                            }
                        }
                    },
                    data: brower
                }

            ]
        };

        //console.log(brower)
        wxStatus.setOption(option)
        window.addEventListener("resize",()=>{
            wxStatus.resize();
    });
    }
