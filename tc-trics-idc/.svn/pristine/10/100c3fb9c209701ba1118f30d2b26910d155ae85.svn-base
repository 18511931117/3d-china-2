    function editParam(){
        var id =$("input[name=id]").val();
        var sysName =$("input[name=sysName]").val();
        if(sysName==""){
            var obj={
                type:"showSweetAlert",
                title:"提示",
                content:"请输入参数名称！！",
            };
            method.msg_layer(obj);
            $("input[name=sysName]").focus()
            return
        }

        var sysKey =$("input[name=sysKey]").val();

        if(sysKey==""){
            var obj={
                type:"showSweetAlert",
                title:"提示",
                content:"请输入参数编码！！",
            };
            method.msg_layer(obj);
            $("input[name=sysKey]").focus()
            return
        }

        var sysValue=$("input[name=sysValue]").val();
        if(sysValue==""){
            var obj={
                type:"showSweetAlert",
                title:"提示",
                content:"请输入参数值！！",
            };
            method.msg_layer(obj);
            $("input[name=sysValue]").focus()
            return
        }
        var type= $("input[name=type]").val();
        if(type==""){
            var obj={
                type:"showSweetAlert",
                title:"提示",
                content:"请输入参数类型！！",
            };
            method.msg_layer(obj);
            $("input[name=type]").focus()
            return
        }

        $.ajax({
            url:  ctxPath+"param/update",
            type: "POST",
            data:{
                id:id,
                sysName:sysName,
                sysKey:sysKey,
                sysValue:sysValue,
                type:type
            },
            cache:false,
            dataType: "json",
            success: function(data){
                var obj={
                    type:"showSweetAlert",
                    title:"提示",
                    content:data.message,
                };
                $('.msg-layer-bg').css('display','none')
                $('.msg-layer').css('display','none')
                method.msg_layer(obj);
                if(data.code=="0"){
                    setTimeout(window.location.href=ctxPath+'param', 1500);
                }
            },
            error:function(err){
                layer.msg("服务器内部错误！")
            }
        });
    }

