function printQrPc(val){

    $("#pcDown"+val).jqprint({
        debug:false,
        importCSS:true,
        printContainer:true,
        operaSupport:false
    });


    $.get(
        ctxPath +"device/print",
        {'id':val},
        function(data){
            if(data.code == '0'){
                refreshfTable($("#pcTable"),'1',getQuery());
            }
        }
    )
}




function printQrPhone(val){

