function confimPc(val){

    if(confirm("是否确认该设备已贴标?")){
        $.get(
            ctxPath +"device/confirm",
            {'id':val},
            function(data){
                if(data.code == '0'){
                    refreshfTable($("#pcTable"),'1',getQuery());
                }
            }
        )
    }

}