<script>


    function status(list) {
        var wxStatus = echarts.init(document.getElementById('status'));

        wxStatus.setOption({
            title : {
                text: '设备状态',
                x:'left',
                y: 'top',
                padding: [10, 15],
                textStyle: {
                    color:"#fff"
                }
            },
            tooltip: {
                trigger: 'item',
                formatter: "{a} <br/>{b}: {c} ({d}%)"
            },
            legend: {
                icon: "circle",   //  这个字段控制形状  类型包括 circle，rect ，roundRect，triangle，diamond，pin，arrow，none
                itemWidth: 10,  // 设置宽度
                itemHeight: 10, // 设置高度
                orient: 'horizontal',
                x: 'left',
                bottom:'20',
                left: 'center',
                data: names,
                itemGap:35,
                textStyle:{
                    color:"#fff"
                }
            },
            color:['#2980E3', '#329FE0','#4DCCCB','#4A90E2'],
            series: [
                {
                    name: '访问来源',
                    type: 'pie',
                    radius: ['40%', '60%'],
                    avoidLabelOverlap: false,
                    label: {
                        normal: {
                            show: false,
                            position: 'center'
                        },
                        emphasis: {
                            show: true,
                            textStyle: {
                                fontSize: '20',
                                fontWeight: 'bold'
                            }
                        }
                    },
                    labelLine: {
                        normal: {
                            show: false
                        }
                    },
                    data: brower
                }
            ]
        });
        var names = []; //类别数组（用于存放饼图的类别）
        var brower = [];

        $.each(list, function(index, item) {
            names.push(item.value); //挨个取出类别并填入类别数组
            brower.push({
                name: item.value,
                value: item.name
            });
        });
        wxStatus.setOption({
            legend: {
                data: names
            },
            series: [{
                data: brower
            }]
        })
        window.addEventListener("resize",()=>{
            wxStatus.resize();
    });
    }
    function scrapped(list){
        var wxScrapped = echarts.init(document.getElementById('scrapped'));
        console.log(list)
        var series=[]

        for(var i = 0;i<list.length;i++){
            console.log(list[i])
            series.push({
                name: list[i].name,
                data: list[i].data,
                type: 'bar',
                barGap: 0,

            })
        }

        option = {
            title : {
                text: '设备报废',
                x:'left',
                y: 'top',
                padding: [10, 15],
                textStyle: {
                    color:"#fff"
                }
            },
            color: ['#F5B856', '#66A0E3', '#E5E8AE', '#F2C2AA'],
            tooltip: {
                trigger: 'axis',
                axisPointer: {
                    type: 'shadow'
                }
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                top:'25%',
                containLabel: true
            },
            legend: {
                icon: "circle",   //  这个字段控制形状  类型包括 circle，rect ，roundRect，triangle，diamond，pin，arrow，none
                itemWidth: 10,  // 设置宽度
                itemHeight: 10, // 设置高度
                top:45,
                itemGap:35,
                // right:20,
                left:10,
                data: ['设备数量', '报废数量', '在线数量', '初始数量'],
                textStyle:{
                    color:"#fff"
                }

            },
            toolbox: {
                show: true,
                orient: 'vertical',
                left: 'right',
                top: 'center',
                feature: {
                }
            },
            calculable: true,
            xAxis: [
                {
                    type: 'category',
                    axisTick: {show: false},
                    data: ['2012', '2013', '2014', '2015', '2016']
                }
            ],
            yAxis: [
                {
                    type: 'value'
                }
            ],
            series: series,
        };


        wxScrapped.setOption(option);

        window.addEventListener("resize",()=>{
            wxScrapped.resize();
    });

    }
    function quanTity(list){
        var Tjtity = echarts.init(document.getElementById('quantity'));

        var series=[]
        for(var i = 0;i<list.length;i++){
            series.push({
                name: list[i].name,
                data: list[i].data,
                symbolSize:10,
                type:'line',
                symbol:'circle',
                smooth: true,
                stack: '总量',
            })
        }

        option = {
            title: {
                padding: [10, 15],
                text: '数量统计折线图',
                textStyle: {
                    color:"#fff"
                }
            },
            tooltip: {
                orient: 'horizontal',
                x: 'left',
                trigger: 'axis'
            },
            legend: {
                icon: "circle",   //  这个字段控制形状  类型包括 circle，rect ，roundRect，triangle，diamond，pin，arrow，none
                itemWidth: 10,  // 设置宽度
                itemHeight: 10, // 设置高度
                orient: 'horizontal',
                itemGap:35,
                // data:['设备维修','报废设备','设备调用','设备借用'],
                top:40,
                left:10,
                textStyle:{
                    color:"#fff"
                }
            },
            color:['#F5B856', '#D13902','#50E3C2','#4A90E2'],
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                top:'20%',
                containLabel: true
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'category',
                boundaryGap: false,
                data: ['2014','2015','2016','2017','2018','2019']
            },
            yAxis: {
                type: 'value'
            },
            series: series
        };

        Tjtity.setOption(option);


        window.addEventListener("resize",()=>{
            Tjtity.resize();
    });

    }



    doresize()
    function doresize() {
        var maps = echarts.init(document.getElementById('mapadd'));
        window.addEventListener("resize",()=>{
            maps.resize();
    });
        maps.on('click', function(params){
            //change_region(params.name);
            //alert(params.name);
            ajaxname(params.data.mid)
            console.log(params.data.mid);//此处写点击事件内容
        });

    }
    ajaxname(1)
    function ajaxname(mid){

        $.ajax({
            url: ctxPath+"getReportData",
            type: 'get',
            dataType: "json",
            success: function(res) {
                var data={}
                for(var i=0;i<res.length;i++){
                    if(res[i].id==mid){
                        data=res[i]
                    }
                }
                var list=data.value.list
                var baofei=data.value.baofei
                var tongji=data.value.tongji
                status(list)
                scrapped(baofei)
                quanTity(tongji)
                var num = data.value.num
                $(".num1").text(num.online1)
                $(".num2").html(num.online2)
                $(".num3").html(num.online3)
                $(".num4").html(num.online4)
                $(".num5").html(num.online5)
                $(".num6").html(num.online6)
                // doresize()
            }
        })

    }


</script>


