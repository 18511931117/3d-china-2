//修改数据回显
function edit(obj) {
    $("#menuId").val(obj.data.id)
    $("#names").val(obj.data.name)
    $("#permissions").val(obj.data.permission)
    $("#types").val(obj.data.type)
    $("#urls").val(obj.data.url)
    $("#parents").val(obj.data.parentId)
    $("#nums").val(obj.data.num)
}
//修改数据接口
$("#editData").on("click",function () {
    var id= $("#menuId").val();
    var name = $("#names").val();
    if(name==""){
        layer.msg("请输入菜单名称！！")
        $("#names").focus()
        return
    }
    var permission= $("#permissions").val();
    if(permission==""){
        layer.msg("请输入权限标识！！")
        $("#permissions").focus()
        return;
    }
    var type =$("#types").val();
    if(type==""){
        layer.msg("请输入类型(1:菜单 2:按钮)！！")
        $("#types").focus()
        return;
    }
    var url =$("#urls").val();
    if(url==""){
        layer.msg("请输入菜单名称！！")
        $("#urls").focus();
        return;
    }
    var parentId =$("#parents").val();
    if(parentId==""){
        layer.msg("请输入URL！！")
        $("#parents").focus()
        return;
    }
    var num =$("#nums").val();
    if(num==""){
        layer.msg("请输入排序！！")
        $("#nums").focus();
        return;
    }
    $.ajax({
        url:  "/menu/update",
        type: "POST",
        data:{
            id:id,
            name:name,
            permission:permission,
            type:type,
            url:url,
            parentId:parentId,
            num,num
        },
        cache:false,
        dataType: "json",
        success: function(data){
            layer.msg(data.message);
            if(data.code=="0"){
                setTimeout('window.location.reload()',1500);

            }
        },
        error:function(err){
            layer.error("服务器内部错误！")
        }
    });

})
