//删除菜单
function del(obj) {
    layer.confirm("你确定删除数据吗？如果存在下级节点则一并删除，此操作不能撤销！", {icon: 3, title:'提示'},
        function(index){//确定回调
            $.ajax({
                url:  "/menu/delete",
                type: "POST",
                data:{
                    menuIds:obj.data.id
                },
                cache:false,
                dataType: "json",
                success: function(data){
                    layer.msg(data.message);
                    if(data.code=="0"){
                        obj.del();
                    }
                },
                error:function(err){
                    layer.msg("服务器内部错误！")
                }
            });
        },function (index) {//取消回调
            layer.close(index);
        }
    );
}

