//添加
$("#addMenus").on("click",function () {
    var name = $("#name").val();
    if(name==""){
        alert("请输入菜单名称！！")
        $("#name").focus()
        return
    }
    var permission= $("#permission").val();
    if(permission==""){
        alert("请输入权限标识！！")
        $("#permission").focus()
        return;
    }
    var type =$("#type").val();
    if(type==""){
        alert("请输入类型(1:菜单 2:按钮)！！")
        $("#type").focus()
        return;
    }
    var url =$("#url").val();
    if(url==""){
        alert("请输入URL！！")
        $("#url").focus();
        return;
    }
    var parentId = $('#menusId').val()

    // if(parentId==""){
    //     alert("请选择上级ID！！")
    //     $("#parent").focus()
    //     return;
    // }
    var num =$("#num").val();
    if(num==""){
        alert("请输入排序！！")
        $("#num1").focus();
        return;
    }
    $.ajax({
        url:  "/menu/add",
        type: "POST",
        data:{
            name:name,
            permission:permission,
            type:type,
            url:url,
            parentId:parentId,
            num,num
        },
        cache:false,
        dataType: "json",
        success: function(data){
            alert(data.message);
            if(data.code=="0"){
                setTimeout('window.location.reload()',1500);

            }
        },
        error:function(err){
            layer.error("服务器内部错误！")
        }
    });
})
