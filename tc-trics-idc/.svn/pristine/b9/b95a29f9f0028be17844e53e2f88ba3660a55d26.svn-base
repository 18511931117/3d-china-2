<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manage.idc.system.mapper.IndexReportMapper">
  <select id="getReportTotalSum" resultType="java.util.Map">
    SELECT
	SUM(d.rackCount) rackTotal,
	SUM(orgCount) orgTotal,
	SUM(roomCount) roomTotal,
	SUM(deviceCount) deviceTotal,
	1 level,
	(
		SELECT
			COUNT(rt.id)
		FROM
			res_type rt
	) 'deviceTypeTotal'
FROM
	(
		SELECT
			r.*, (
				SELECT
					count(*)
				FROM
					room
				WHERE
					region_id = r.region_id
				AND is_del = 0
			) 'roomCount',
			(
				SELECT
					COUNT(*)
				FROM
					res
				WHERE
					region_id = r.region_id
				AND is_del = 0
			) 'deviceCount'
		FROM
			(
				SELECT
					so.id orgId,
					sr.id region_id,
					sr. NAME,
					COUNT(rk.id) 'rackCount',
					COUNT(so.id) 'orgCount'
				FROM
					sys_region sr
				LEFT JOIN sys_org so ON sr.id = so.region_id
				LEFT JOIN rack rk ON rk.org_id = so.id
				AND rk.is_del = 0
				GROUP BY
					sr.id
			) r
		GROUP BY
			r.region_id
	) d
  </select>

  <select id="getReportColumnarTotal" resultType="java.util.Map">
			SELECT
				rs.region_id,
				DATE_FORMAT(rs.created_time, '%Y') year,
				sum(
					CASE
					WHEN rs.`status` = 1 THEN
						1
					ELSE
						0
					END
				) 'onlineTotal',
				sum(
					CASE
					WHEN rs.`status` = 6 THEN
						1
					ELSE
						0
					END
				) 'scrapTotal',
				count(rs.id) 'deviceTotal',
				sum(
					CASE
					WHEN rs.`status` = 0 THEN
						1
					ELSE
						0
					END
				) 'unknownTotal'
			FROM
				res rs
			GROUP BY
				DATE_FORMAT(rs.created_time, '%Y')
			<if test="regionId!=null">
				HAVING
				region_id = #{regionId}
			</if>
  </select>
	<select id="getReportRegionTotal" resultType="java.util.Map">
		SELECT
		r.*, (
		SELECT
		count(*)
		FROM
		room
		WHERE
		region_id = r.region_id
		AND is_del = 0
		) 'roomTotal',
		(
		SELECT
		COUNT(*)
		FROM
		res
		WHERE
		region_id = r.region_id
		AND is_del = 0
		) 'deviceTotal',
		1 level
		FROM
		(
		SELECT
		so.id orgId,
		sr.id region_id,
		sr. NAME,
		COUNT(rk.id) 'rackTotal',
		COUNT(so.id) 'orgTotal'
		FROM
		sys_region sr
		LEFT JOIN sys_org so ON sr.id = so.region_id
		LEFT JOIN rack rk ON rk.org_id = so.id
		AND rk.is_del = 0
		GROUP BY
		sr.id
		) r
		GROUP BY
		r.region_id
		<if test="regionId!=null">
			HAVING
			region_id = #{regionId}
		</if>
  </select>
	<select id="getReportBrokenTotal" resultType="java.util.Map">
			SELECT
			rs.region_id,
			DATE_FORMAT(rs.created_time, '%Y') year,
			sum(
				CASE
				WHEN rs.`status` = 3 THEN
					1
				ELSE
					0
				END
			) 'allocationTotal',
			sum(
				CASE
				WHEN rs.`status` = 4 THEN
					1
				ELSE
					0
				END
			) 'repairTotal',
			sum(
				CASE
				WHEN rs.`status` = 5 THEN
					1
				ELSE
					0
				END
			) 'borrowTotal',
			sum(
				CASE
				WHEN rs.`status` = 6 THEN
					1
				ELSE
					0
				END
			) 'scrapTotal'
		FROM
			res rs
		GROUP BY
			DATE_FORMAT(rs.created_time, '%Y')
		<if test="regionId!=null">
			HAVING
			region_id = #{regionId}
		</if>
  </select>

	<select id="getReportRegion" resultType="java.util.Map">
			SELECT
				id,
				name
			FROM
				sys_region
			WHERE
				parent_id != 0
  </select>

