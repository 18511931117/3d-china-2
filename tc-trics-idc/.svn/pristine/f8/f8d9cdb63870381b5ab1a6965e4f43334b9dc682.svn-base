<script>
    $(function () {
        var socket;
        if (typeof (WebSocket) == "undefined") {
            console.log("遗憾：您的浏览器不支持WebSocket");
        } else {
            console.log("恭喜：您的浏览器支持WebSocket");

            //实现化WebSocket对象
            //指定要连接的服务器地址与端口建立连接
            //注意ws、wss使用不同的端口。我使用自签名的证书测试，
            //无法使用wss，浏览器打开WebSocket时报错
            //ws对应http、wss对应https。
            socket = new WebSocket("ws://192.168.1.52:8081/websocket/manager/"+$("#id").text());
            //连接打开事件
            socket.onopen = function() {
                console.log("Socket 已打开");
                socket.send("消息发送测试(From Client)");
            };
            //收到消息事件
            socket.onmessage = function(msg) {
                console.log(msg);
                if(msg.data > 0){
                    $("#warnin").attr("class","lingdangWarning");
                }else{
                    $("#warnin").attr("class","lingdang");
                }
            };
            //连接关闭事件
            socket.onclose = function() {
                console.log("Socket已关闭");
            };
            //发生了错误事件
            socket.onerror = function() {
                alert("Socket发生了错误");
            }

            //窗口关闭时，关闭连接
            window.unload=function() {
                socket.close();
            };
        }
    })

    window.onload = function () {
        var ClassiconList = ['nav-1','nav-2','nav-3','nav-4','nav-5','nav-6']
        var username=localStorage.getItem("username")
        $('.username').text(username)

        var urls="/menu/tree";
        $(".sidebar-menu").show()
        var str='';
        $.ajax({
            url: urls,
            type: 'get',
            dataType: 'json',
            success: function (res) {
                if (res.data.length > 0) {
                    for (var i = 0; i < res.data.length; i++) {
                        if(res.data[i].title=="首页"){
                            str += '<li>' +
                                '<a href="javascript:refresh(&apos;' + res.data[i].url + '&apos;)">' +
                                '<i class="'+ClassiconList[i]+'"></i>'+
                                 '<span>'+ res.data[i].title + '</span>'+
                                '</a>' +
                                '</li>'
                            continue;
                        }

                        str += '<li class="sub-menu">' +
                            '<a class="" >' +
                            '<i class="'+ClassiconList[i]+'"></i>'+
                            '<span>' + res.data[i].title + '</span>' +
                            '<span class="arrow"></span>' +
                            '</a>' +
                            '<ul class="sub">'
                        for (var j = 0; j < res.data[i].children.length; j++) {

                            str += '<li>' +
                                '<a href="javascript:refresh(&apos;' + res.data[i].children[j].url + '&apos;)">' + res.data[i].children[j]
                                    .title +
                                '</a>' +
                                '</li>'
                        }
                        str += '</ul>' +
                            '</li>'
                    }
                    $('.sidebar-menu').append(str)
                } else {
                    console.log('链接失败');
                }

            }
        })

    }
    $('#sidebar').on("click",".sub-menu > a",function () {
        var last = jQuery('.sub-menu.open', $('#sidebar'));
        last.removeClass("open");
        jQuery('.arrow', last).removeClass("open");
        jQuery('.sub', last).slideUp(200);
        var sub = jQuery(this).next();
        if (sub.is(":visible")) {
            jQuery('.arrow', jQuery(this)).removeClass("open");
            jQuery(this).parent().removeClass("open");
            sub.slideUp(200);
        } else {
            jQuery('.arrow', jQuery(this)).addClass("open");
            jQuery(this).parent().addClass("open");
            sub.slideDown(200);
        }
        var o = ($(this).offset());
        diff = 200 - o.top;
        if(diff>0)
            $("#sidebar").scrollTo("-="+Math.abs(diff),500);
        else
            $("#sidebar").scrollTo("+="+Math.abs(diff),500);
    });


    function refresh(url) {
        $("#content").attr("src",ctxPath+""+url)
    }

    /**
     * 个人中心
     */
    $("#resExt").on('click',function () {
        $("input[type=reset]").trigger("click");
        $("#editPassword").modal('show')
    })
    
    
    $("#center").click(function () {
        $("#myModal2").modal('show')
    })

    $("#updatePassword").click(function () {
        let username=$(":input[name='username']").val()
        let id = $("#userId").val();
        console.log(id)
        let oldPassword = $("#password").val()
        if(oldPassword==""){
            var obj={
                type:"showSweetAlert",
                title:"提示",
                content:"请输入旧密码..",
            };
            method.msg_layer(obj);
            return
        }
        let newPassword1 = $("input[name='password1']").val()
        if(newPassword1==''){
            var obj={
                type:"showSweetAlert",
                title:"提示",
                content:"请输入新密码..",
            };
            method.msg_layer(obj);
            return
        }

        let newPassword2 = $("input[name='password2']").val()
        if(newPassword2==''){
            var obj={
                type:"showSweetAlert",
                title:"提示",
                content:"请再次输入新密码..",
            };
            method.msg_layer(obj);
            return
        }
        if(newPassword1!=newPassword2){
            var obj={
                type:"showSweetAlert",
                title:"提示",
                content:"俩次输入的密码不一致..",
            };
            method.msg_layer(obj);
            return;
        }
        $.ajax({
            url:  ctxPath+"user/editUserPassword",
            type: "POST",
            data:{
                oldPassword:oldPassword,
                password:newPassword1,
                id:id,
                username:username
            },
            cache:false,
            dataType: "json",
            success: function(data){
                var obj={
                    type:"showSweetAlert",
                    title:"提示",
                    content:data.message,
                };
                method.msg_layer(obj);
                if(data.code=="0"){
                    $("#editPassword").modal('hide')
                }
            },
            error:function(err){
                var obj={
                    type:"showSweetAlert",
                    title:"提示",
                    content:"服务器内部错误！",
                };
                method.msg_layer(obj);
            }
        });
    })
</script>


